<h2>Login</h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: 'form-horizontal' }, defaults: { input_html: { class: 'form-control' } }) do |f| %>
<div class="col-xs-12 col-md-4">
  <%= devise_error_messages! %>

  <%= f.input :email %>
  <%= f.input :password %>
  <% if devise_mapping.rememberable? %>
    <%= f.input :remember_me, as: :boolean %>
  <% end %>
  <%= f.button :submit %>
  <%= link_to "Passwort vergessen?", new_password_path(resource_name) %><br />
<% end %>

<p><br />
 Oder hier <%= link_to "neu anmelden", new_registration_path(resource_name) %>
</p>
</div>
